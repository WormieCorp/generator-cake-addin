{
    "name": "generator-cake-addin",
    "version": "1.6.0",
    "description": "A yeoman generator to get you quickly set up for writing Cake Addins.",
    "icon": "graphics/icon_128x128.png",
    "scripts": {
        "commit": "git-cz",
        "setup": "tsc gulpfile.ts --target ES2018 --module commonjs --esModuleInterop",
        "build": "gulp build",
        "test": "jest",
        "watch": "gulp watch",
        "semantic-release": "semantic-release"
    },
    "files": [
        "generators"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/WormieCorp/generator-cake-addin.git"
    },
    "keywords": [
        "cake-addin",
        "yeoman-generator"
    ],
    "author": "Kim J. Nordmo",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/WormieCorp/generator-cake-addin/issues"
    },
    "homepage": "https://github.com/WormieCorp/generator-cake-addin#readme",
    "engines": {
        "node": ">= 8.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "transform": {
            "\\.(ts|tsx)$": "ts-jest"
        },
        "testRegex": "/__tests__/.*\\.(ts|tsx)$",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "tepmlates"
        ]
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "fullname": "^4.0.1",
        "gulp-if": "^3.0.0",
        "through2": "^4.0.2",
        "username": "^5.1.0",
        "uuid": "^8.3.0",
        "yeoman-generator": "^4.12.0",
        "yosay": "^2.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "11.0.0",
        "@commitlint/config-conventional": "11.0.0",
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/commit-analyzer": "8.0.1",
        "@semantic-release/exec": "5.0.0",
        "@semantic-release/git": "9.0.0",
        "@semantic-release/github": "7.1.1",
        "@semantic-release/npm": "7.0.6",
        "@semantic-release/release-notes-generator": "9.0.1",
        "@types/command-exists": "1.2.0",
        "@types/gulp": "4.0.7",
        "@types/gulp-if": "0.0.33",
        "@types/gulp-sourcemaps": "0.0.32",
        "@types/jest": "26.0.14",
        "@types/merge-stream": "1.1.2",
        "@types/prettier": "2.1.1",
        "@types/through2": "2.0.36",
        "@types/uuid": "8.3.0",
        "@types/yeoman-assert": "3.1.1",
        "@types/yeoman-environment": "2.10.1",
        "@types/yeoman-generator": "4.11.2",
        "@types/yeoman-test": "2.0.4",
        "@types/yosay": "0.0.29",
        "command-exists": "1.2.9",
        "commitizen": "4.2.1",
        "conventional-changelog-wormiecorp": "1.1.3",
        "cz-conventional-changelog": "3.3.0",
        "del": "6.0.0",
        "ejs-lint": "^1.1.0",
        "gulp": "4.0.2",
        "gulp-prettier": "3.0.0",
        "gulp-sourcemaps": "2.6.5",
        "gulp-tslint": "8.1.4",
        "gulp-typescript": "6.0.0-alpha.1",
        "husky": "4.3.0",
        "jest": "26.4.2",
        "jest-junit": "11.1.0",
        "lint-staged": "12.5.0",
        "merge-stream": "2.0.0",
        "prettier": "2.1.2",
        "semantic-release": "17.1.2",
        "ts-jest": "26.4.1",
        "tslint": "6.1.3",
        "tslint-config-prettier": "1.18.0",
        "tslint-plugin-prettier": "2.3.0",
        "typescript": "4.0.3",
        "yeoman-assert": "3.1.1",
        "yeoman-test": "3.0.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "config": "conventional-changelog-wormiecorp",
                    "releaseRules": [
                        {
                            "type": "chore",
                            "scope": "deps",
                            "release": "patch"
                        },
                        {
                            "type": "improvement",
                            "release": "minor"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/release-notes-generator",
                {
                    "config": "conventional-changelog-wormiecorp"
                }
            ],
            [
                "@semantic-release/changelog",
                {
                    "changelogTitle": "# Cake Addin generator changelog"
                }
            ],
            [
                "@semantic-release/exec",
                {
                    "prepareCmd": "./build.sh --build --no-pack"
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "tarballDir": "dist"
                }
            ],
            "@semantic-release/git",
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "dist/*.tgz",
                            "label": "generator-cake-addin npm package"
                        }
                    ]
                }
            ]
        ]
    },
    "lint-staged": {
        "*.{ts,js}": [
            "tslint --fix",
            "prettier --write"
        ],
        "*.{md,json,yml,yaml}": [
            "prettier --write"
        ],
        "*.tmpl": [
            "ejslint"
        ]
    }
}
